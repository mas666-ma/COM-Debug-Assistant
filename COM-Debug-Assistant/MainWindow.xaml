<Window x:Class="COM_Debug_Assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:COM_Debug_Assistant"
        mc:Ignorable="d"
        Title="串口助手" Height="450" Width="800">
	<Grid>
		<GroupBox x:Name="set_group" Header="串口配置" Height="350" Width="200" Margin="10,18,590,67">
			<Grid >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="20"/>
					<RowDefinition Height="20"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<Label Grid.Row="0" Grid.Column="0" Content="串口" FontSize="8" FontWeight="Heavy"/>
				<ComboBox Grid.Row="0" Grid.Column="1"></ComboBox>
				<Label Grid.Row="1" Grid.Column="0" Content="波特率" FontSize="8" FontWeight="Heavy"></Label>
				<ComboBox Grid.Row="1" Grid.Column="1"></ComboBox>
			</Grid>
		</GroupBox>
		<TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="275,19,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Height="181" Width="398"/>
	</Grid>
</Window>
